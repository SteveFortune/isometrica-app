{
  "name": "Page",
  "base": "PersistedModelExt",
  "idInjection": true,
  "properties": {
    "documentId" : {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "section": {
      "type": "string"
    },
    "version": {
      "type": "number"
    },
    "contents" : {
      "type": "string"
    },
    "tags" :{
      "type": ["string"]
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "embedsMany",
      "model": "Comment",
      "property": "comments",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "signatures": {
      "type": "embedsMany",
      "model": "Signature",
      "property": "signatures",
      "options": {
        "validate": true,
        "forceId": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
