{
  "name": "Page",
  "base": "PersistedModelExt",
  "idInjection": true,
  "properties": {
    "documentId": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "section": {
      "type": "string"
    },
    "version": {
      "type": "number",
      "default": 1
    },
    "currentVersion": {
      "type": "boolean",
      "default": true
    },
    "contents": {
      "type": "string"
    },
    "tags": {
      "type": [
        "string"
      ]
    }
  },
  "validations": [],
  "relations": {
    "commentsRel": {
      "type": "embedsMany",
      "model": "Comment",
      "property": "comments",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "signaturesRel": {
      "type": "embedsMany",
      "model": "Signature",
      "property": "signatures",
      "options": {
        "validate": true,
        "forceId": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": [],
  "scopes": {
    "current": {"where": {"currentVersion": true}}
  }

}
