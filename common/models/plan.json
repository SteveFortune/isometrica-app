{
  "name": "Plan",
  "base": "PersistedModelExt",
  "idInjection": true,
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "orgName": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "templateId": {
      "type": "string"
    },
    "isTemplate": {
      "type": "boolean",
      "default": false
    },
    "isArchived": {
      "type": "boolean",
      "default": false
    },
    "inTrash": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "assets": {
      "type": "hasMany",
      "model": "Asset",
      "foreignKey": "planId"
    },
    "canvasItems": {
      "type": "hasMany",
      "model": "CanvasItem",
      "foreignKey": "planId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
